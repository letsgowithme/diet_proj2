{% extends 'base.html.twig' %}
{% block title %}
	Mes recettes
{% endblock %}
{% block body %}
<div style="height: 50px; z-index: -3; margin-top: -10px;">{% include "partials/_header_img.html.twig" %}</div>
	<div class="container recipes_page">
		<h1 class="recipes_page_title my-4 p-3" style="background: #228a98;">Mes recettes</h1>
<div class="recipes_page_rec_block">
			   	{% if app.user.recipes %}
					{% for recipe in app.user.recipes %}
					
					<div class="card card_rec_page border-primary mb-3 text-xs-center w-100">
					<div class="card-body">
						<h4 class="card-title card_title text-center capitalize">
						{% if recipe.isPublic is same as false %}					
							<a href="{{ path('recipe.show', {id: recipe.id}) }}">{{ recipe.name }}</a>
							{% else %}
							<a href="{{ path('recipe.show_public', {id: recipe.id}) }}">{{ recipe.name }}</a>
								{% endif %}
						</h4>
						<div class="recipe__image card-image card_img_rec_page text-center">
							<img class="recipe_img" src="{{ vich_uploader_asset(recipe, 'imageFile') }}">
						</div>
							<p class="card-text text-center">{{ recipe.description|raw }}</p>
					</div>
				</div>
				{% endfor %}
				{% endif %}	
		</div>
	</div>
{% endblock %}